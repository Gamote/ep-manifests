{
  "id": "com.envpilot.plugin.homebrew",
  "version": "0.0.1",
  "name": "Homebrew",
  "capabilities": {
    "apps": {
      "fields": {
        "formulaOrCaskName": {
          "type": "string",
          "title": "Formula/Cask",
          "description": "Name of the formula/cask you want to use",
          "required": true
        },
        "isCask": {
          "type": "boolean",
          "title": "Is Cask",
          "description": "Specify if this is a Cask and not a Formula",
        },
      },
      "checkInstallation": [
        "brew list --cask \"${{ app.id }}\""
      ],
      "checkVersion": [
        "brew list --version --cask \"${{ app.id }}\" | awk '{print $2}'"
      ]
    }
  }
}
